		assert.that(luisAlberto.laPego())
	}
	test "Queremos saber si Soledad la pegó”. No"{
		assert.notThat(soledad.laPego())
	}
	test "Queremos saber si Luis Joaquin la pegó”. Si"{
		assert.that(joaquin.laPego())
	}
